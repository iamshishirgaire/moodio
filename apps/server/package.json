		"@orpc/zod": "catalog:",
		"@sinclair/typebox": "^0.34.41",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"elysia": "catalog:",
		"picocolors": "^1.1.1",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3",
		"zod": "catalog:"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
